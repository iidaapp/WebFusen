{
    // 拡張機能の定義
    "manifest_version": 2,  // マニフェストのバージョン ※"2"を指定
    "name": "WebFusen",       // 拡張機能の名称
    "version": "1.0",       // 拡張機能のバージョン
 
    "description": "Label For Web Pages",  // 拡張機能の概要
 
    // アイコンの設定
    "icons": {
        "16": "icons/icon16.png",         // 16×16[px]アイコンファイルのパス
        "48": "icons/icon48.png",         // 48×48[px]アイコンファイルのパス
        "128": "icons/icon128.png"         // 128×128[px]アイコンファイルのパス
    },
 
    // ブラウザアクション
    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_title": "WebFusen",
        "default_popup": "html/popup.html"
    },

    "options_page": "html/options.html",

    "background": {
        "scripts": ["js/background.js"]
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/tool/jquery-1.11.2.min.js", "js/tool/jquery-ui.min.js", "js/tool/spectrum.js", "js/fusen-util.js","js/fusen.js"],
        "run_at": "document_idle"
    }],

    "web_accessible_resources": ["css/*", "css/images/*"],

    "permissions": [
        "storage",
        "tabs"
    ]
}